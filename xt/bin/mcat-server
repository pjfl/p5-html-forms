#!/usr/bin/env perl

use English qw( -no_match_vars );
use FindBin qw( $Bin );
use File::Spec;

BEGIN {
   my $bind = $Bin; $bind = $1 if $bind =~ m{ \A ([^\$%&\*;<>\`|]+) \z }mx;
   my $path = File::Spec->catfile( $bind, 'forms-localenv' );

   (do $path or die $EVAL_ERROR || "Path ${path} not done\n") if -f $path;
}

use MCat::Server;

MCat::Server->new->run_if_script;
